<p id="notice"><%= notice %></p>

<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <% begin %>
        <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
        <% rescue %>
        No thumbnail
        <% end %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>

